<form action="/articles/<%= @article.id %>" method="POST">
    <h1>Edit an Article</h1>

    <input id="hidden" type="hidden" name="_method" value="PATCH">

    <p><label>Title: <input type="text" id="title" name="article[title]" value="<%= @article.title%>" /></label><br /></p>
    <p><label>Content: <input type="text" id="content" name="article[content]" value="<%= @article.content%>" /></label><br /></p>

    <button type="submit" id="submit">Submit Edit</button>
</form>